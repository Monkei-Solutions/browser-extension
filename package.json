{
  "name": "anonaddy-extension",
  "version": "1.1.4",
  "description": "AnonAddy browser extension.",
  "main": "app.js",
  "scripts": {
    "dev": "mix",
    "watch": "mix watch",
    "production": "mix --production",
    "build": "npm run production && rm -rf dist-zip && npm run zip",
    "format": "prettier --write 'src/assets/**/*.{css,js,vue}'",
    "zip": "node scripts/build-zip.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "archiver": "^3.1.1",
    "autoprefixer": "^10.0.2",
    "laravel-mix": "^6.0.6",
    "postcss": "^8.1.14",
    "postcss-import": "^12.0.1",
    "tailwindcss": "^2.0.1",
    "v-clipboard": "^2.2.3",
    "vue": "^2.6.12",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12",
    "webextension-polyfill": "^0.5.0"
  },
  "devDependencies": {
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,js,vue}": [
      "npm run format --"
    ]
  }
}
